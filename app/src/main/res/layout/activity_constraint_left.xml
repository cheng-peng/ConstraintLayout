<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff0"
    android:overScrollMode="never"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0"
        android:padding="10dp">

        <TextView
            android:id="@+id/left_tv1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#f00"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/left_tv2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="#0f0"
            app:layout_constraintLeft_toRightOf="@id/left_tv1"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/left_tv3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#00f"
            app:layout_constraintBottom_toBottomOf="@id/left_tv1"
            app:layout_constraintLeft_toRightOf="@id/left_tv1"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/left_tv4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#0ff"
            android:gravity="center"
            android:text="这里面的match_parent替换成了0dp,详情请看xml"
            android:textColor="#f00"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/left_tv1" />

        <TextView
            android:id="@+id/left_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintLeft_toLeftOf:该控件的左侧在那个控件的左侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv4" />

        <TextView
            android:id="@+id/left_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintLeft_toRightOf:该控件的左侧在那个控件的右侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv5" />

        <TextView
            android:id="@+id/left_tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintRight_toLeftOf:该控件的右侧在那个控件的左侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv6" />

        <TextView
            android:id="@+id/left_tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintRight_toRightOf:该控件的右侧在那个控件的右侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv7" />

        <TextView
            android:id="@+id/left_tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintTop_toTopOf:该控件的上侧在那个控件的上侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv8" />

        <TextView
            android:id="@+id/left_tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintTop_toBottomOf:该控件的上侧在那个控件的下侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv9" />

        <TextView
            android:id="@+id/left_tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintBottom_toTopOf:该控件的下侧在那个控件的上侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv10" />

        <TextView
            android:id="@+id/left_tv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="layout_constraintBottom_toBottomOf:该控件的下侧在那个控件的下侧"
            android:textAllCaps="false"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/left_tv11" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>